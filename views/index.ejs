            // 🔹 Toggle Between Forms (Signup/Login/Forgot Password)
            const toggleForm = (hide, show) => {
                document.getElementById(hide).classList.add("hidden");
                document.getElementById(show).classList.remove("hidden");
            };
        
            document.getElementById("show-login").addEventListener("click", (e) => {
                e.preventDefault();
                toggleForm("signup-section", "login-section");
            });
        
            document.getElementById("show-signup").addEventListener("click", (e) => {
                e.preventDefault();
                toggleForm("login-section", "signup-section");
            });
        
            document.getElementById("forgot-password").addEventListener("click", (e) => {
                e.preventDefault();
                toggleForm("login-section", "forgot-password-section");
            });
        
            document.getElementById("back-to-login").addEventListener("click", (e) => {
                e.preventDefault();
                toggleForm("forgot-password-section", "login-section");
            });
        
            // 🔹 Send Reset Password Email
            document.getElementById("send-reset-email").addEventListener("click", async () => {
                const email = document.getElementById("reset-email").value;
                const messageBox = document.getElementById("reset-message");
        
                try {
                    await sendPasswordResetEmail(auth, email);
                    messageBox.innerText = "✅ Password reset email sent! Check your inbox.";
                    messageBox.style.color = "green";
                } catch (error) {
                    messageBox.innerText = `⚠️ Error: ${error.message}`;
                    messageBox.style.color = "red";
                }
            });
        
            // 🔹 Auto-fill Referral Code from URL (If Provided)
            document.addEventListener("DOMContentLoaded", () => {
                const urlParams = new URLSearchParams(window.location.search);
                const referralCode = urlParams.get("referral");
                if (referralCode) {
                    const referralInput = document.getElementById("referral-code");
                    referralInput.value = referralCode;
                }
            });
        
            // 🔹 Disable Right-Click & Common DevTools Shortcuts
            document.addEventListener("contextmenu", (event) => event.preventDefault()); // Disable right-click
        
            document.addEventListener("keydown", (event) => {
                const blockedKeys = [
                    { ctrl: true, key: "u" }, // View Source (Ctrl + U)
                    { ctrl: true, shift: true, key: "I" }, // DevTools (Ctrl + Shift + I)
                    { ctrl: true, shift: true, key: "J" }, // DevTools (Ctrl + Shift + J)
                    { ctrl: true, key: "S" }, // Save (Ctrl + S)
                    { ctrl: true, key: "P" } // Print (Ctrl + P)
                ];
        
                blockedKeys.forEach(({ ctrl, shift, key }) => {
                    if (event.ctrlKey === ctrl && event.shiftKey === shift && event.key.toLowerCase() === key.toLowerCase()) {
                        event.preventDefault();
                    }
                });
            });
        
