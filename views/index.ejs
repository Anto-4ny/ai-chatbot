<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="min-h-screen flex flex-col justify-center items-center px-6 pb-32">
        <main class="w-full max-w-2xl bg-white p-10 shadow-lg rounded-2xl border border-gray-200">
            <div class="auth-container">
                <!-- Sign-Up Section -->
                <div class="form-box" id="signup-section">
                    <form id="signup-form" class="space-y-5">
                        <h2 class="text-3xl font-bold text-gray-800 text-center">Signup</h2>

                        <label class="block text-md text-gray-600">First Name</label>
                        <input type="text" id="first-name" pattern="[A-Za-z]+" placeholder="Enter your first name" required
                            class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">

                        <label class="block text-md text-gray-600">Last Name</label>
                        <input type="text" id="last-name" pattern="[A-Za-z]+" placeholder="Enter your last name" required
                            class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">

                        <label class="block text-md text-gray-600">Email</label>
                        <input type="email" id="signup-email" placeholder="Enter your email" required
                            class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">

                        <label class="block text-md text-gray-600">Password</label>
                        <div class="relative">
                            <input type="password" id="signup-password" placeholder="Create a password" required
                                class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
                            <span id="toggle-signup-password" class="absolute right-3 top-3 text-gray-500 cursor-pointer">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>

                        <label class="block text-md text-gray-600">Confirm Password</label>
                        <div class="relative">
                            <input type="password" id="confirm-password" placeholder="Confirm your password" required
                                class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
                            <span id="toggle-confirm-password" class="absolute right-3 top-3 text-gray-500 cursor-pointer">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>

                         <!-- Privacy & Data Consent -->
                         <div class="bg-gray-50 p-4 rounded-lg border border-gray-300">
                            <p class="text-sm text-gray-700">
                                Please read our 
                                <a href="#" class="text-blue-600 hover:underline">Privacy Notice</a> which explains how we use your personal data.
                            </p>

                            <div class="mt-3 flex items-start">
                                <input type="checkbox" id="privacy-consent" required class="w-5 h-5 text-blue-600 focus:ring-blue-500">
                                <label for="privacy-consent" class="ml-3 text-sm text-gray-700">
                                    I consent to the processing of my personal data in accordance with VFS's Privacy Notice.
                                </label>
                            </div>

                            <p class="text-sm text-gray-700 mt-3">
                                It is important that you read this information on 
                                <a href="#" class="text-blue-600 hover:underline">Data Transfer</a>.
                            </p>

                            <div class="mt-3 flex items-start">
                                <input type="checkbox" id="data-transfer-consent" required class="w-5 h-5 text-blue-600 focus:ring-blue-500">
                                <label for="data-transfer-consent" class="ml-3 text-sm text-gray-700">
                                    I consent to the international transfer of my data between VFS Global and its affiliates.
                                </label>
                            </div>

                            <p class="text-sm text-gray-700 mt-3">
                                <a href="#" class="text-blue-600 hover:underline">Privacy Policy</a> | 
                                <a href="#" class="text-blue-600 hover:underline">Terms & Conditions</a>
                            </p>

                            <div class="mt-3 flex items-start">
                                <input type="checkbox" id="terms-consent" required class="w-5 h-5 text-blue-600 focus:ring-blue-500">
                                <label for="terms-consent" class="ml-3 text-sm text-gray-700">
                                    By clicking here, I state that I have understood and agreed to the terms and conditions.
                                </label>
                            </div>
                        </div>

                        <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
                            Signup
                        </button>

                        <div class="text-center mt-4">
                            <span class="text-md text-gray-600">Already have an account?</span>
                            <a href="#" id="show-login" class="text-md text-blue-600 hover:underline">Login here</a>
                        </div>
                    </form>
                </div>

                <!-- Login Section -->
                <div class="form-box hidden" id="login-section">
                    <form id="login-form" class="space-y-5">
                        <h2 class="text-3xl font-bold text-gray-800 text-center">Login</h2>

                        <label class="block text-md text-gray-600">Email</label>
                        <input type="email" id="login-email" placeholder="Enter your email" required
                            class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">

                        <label class="block text-md text-gray-600">Password</label>
                        <div class="relative">
                            <input type="password" id="login-password" placeholder="Enter your password" required
                                class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
                            <span id="toggle-login-password" class="absolute right-3 top-3 text-gray-500 cursor-pointer">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>

                        <button type="submit" class="w-full bg-green-600 text-white py-3 rounded-lg font-semibold hover:bg-green-700 transition">
                            Login
                        </button>

                        <div class="text-center mt-4">
                            <a href="#" id="show-signup" class="text-md text-blue-600 hover:underline">Signup here</a> |
                            <a href="#" id="forgot-password" class="text-md text-red-600 hover:underline">Forgot Password?</a>
                        </div>
                    </form>
                </div>

                <!-- Forgot Password Section -->
                <div id="forgot-password-section" class="hidden bg-white p-6 rounded-lg shadow-md">
                    <h2 class="text-3xl font-bold text-gray-800 text-center mb-4">Reset Password</h2>

                    <label class="block text-md text-gray-600">Enter your email</label>
                    <input type="email" id="reset-email" placeholder="Enter your email" required
                        class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">

                    <button id="send-reset-email"
                        class="w-full bg-yellow-500 text-white py-3 rounded-lg font-semibold hover:bg-yellow-600 transition mt-4">
                        Send Reset Email
                    </button>

                    <button id="back-to-login"
                        class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition mt-2">
                        Back to Login
                    </button>
                </div>
            </div>
        </main>
    </div>
</body>


